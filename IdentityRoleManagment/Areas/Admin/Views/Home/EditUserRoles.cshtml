@model IdentityRoleManagment.Areas.Admin.Models.EditUserRolesViewModel

@{
    ViewData["Title"] = "EditUserRoles";
}

<h1>EditUserRoles</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserRoles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @{
                    foreach (var user in Model.RoleToUser)
                    {
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                @*<input class="form-check-input" asp-for="@user.IsInRole" /> @user.User.UserName*@                                
                            </label>
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
